<h2>
  <%= @realm.name %>
  <small>
    (<%= @realm.region.area %> -
    <%= @realm.realm_type.shortname %> -
    <%= @realm.realm_language.code %>)
  </small>
</h2>

<table width="250px">
  <thead>
    <th>Name</th>
    <th>Faction</th>
    <th>Members</th>
  </thead>
  <tbody>
  <% @realm.guilds.by_name.each do |guild| %>
    <tr>
      <td><%= link_to(guild.name, realm_guild_path(@realm, guild)) %></td>
      <td><%= guild.faction.name %></td>
      <td><%= guild.characters.count %></td>
    </tr>
  <% end %>
  </tbody>
</table>